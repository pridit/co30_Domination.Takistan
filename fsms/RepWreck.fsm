    {
      name = "Unlock_Vehicle";
      init = "d_wreck_cur_ar = d_wreck_cur_ar - [_new_vec];" \n
       "{" \n
       "    if (!triggerActivated _x) then {" \n
       "        _new_vec setDir -30;" \n
       "        _new_vec setPos (getPos _x);" \n
       "    };" \n
       "} forEach d_wreck_hangar_triggers;" \n
